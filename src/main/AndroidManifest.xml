<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:maxLength="99999999"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_display"
        android:freezesText="true"
        android:textSize="48dp"
        android:text="0"
        android:background="#89CFF0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <GridLayout
        android:id="@+id/buttons_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="-10dp"
        android:background="#FFAABB"
        android:columnCount="5"


        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/text_display"
        app:layout_constraintTop_toBottomOf="@id/text_display"
        app:layout_constraintVertical_bias="0.058">

        <Button
            android:id="@+id/seven"
            android:layout_row="0"
            android:layout_column="0"
            android:text="7"
            android:textSize="20dip" />

        <Button
            android:id="@+id/four"
            android:layout_row="1"
            android:layout_column="0"
            android:text="4"
            android:textSize="20dip" />

        <Button
            android:id="@+id/one"
            android:layout_row="2"
            android:layout_column="0"
            android:text="1"
            android:textSize="20dip" />

        <Button
            android:id="@+id/memory_read"
            android:layout_width="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:text="R"

            android:textSize="20dip" />

        <Button

            android:id="@+id/eq"
            android:layout_row="4"
            android:layout_column="0"
            android:text="="
            android:textSize="20dip" />


        <Button
            android:id="@+id/eight"
            android:layout_row="0"
            android:layout_column="1"
            android:text="8"
            android:textSize="20dip" />

        <Button

            android:id="@+id/five"
            android:layout_row="1"
            android:layout_column="1"
            android:text="5"
            android:textSize="20dip" />

        <Button
            android:id="@+id/two"
            android:layout_row="2"
            android:layout_column="1"
            android:text="2"
            android:textSize="20dip" />

        <Button
            android:id="@+id/zero"
            android:layout_row="3"
            android:layout_column="1"
            android:text="0"
            android:textSize="20dip" />

        <Button
            android:id="@+id/ac"
            android:layout_row="4"
            android:layout_column="1"
            android:text="AC"
            android:textSize="20dip" />


        <Button
            android:id="@+id/nine"
            android:layout_row="0"
            android:layout_column="2"
            android:text="9"
            android:textSize="20dip" />

        <Button
            android:id="@+id/six"
            android:layout_row="1"
            android:layout_column="2"
            android:text="6"
            android:textSize="20dip" />

        <Button
            android:id="@+id/three"
            android:layout_row="2"
            android:layout_column="2"
            android:text="3"
            android:textSize="20dip" />

        <Button
            android:layout_row="3"
            android:layout_column="4"
            android:text="."
            android:textSize="20dip" />

        <Button
            android:id="@+id/memory_write"
            android:layout_row="4"
            android:layout_column="3"
            android:text="W"
            android:textSize="20dip" />

        <Button
            android:id="@+id/plus"
            android:layout_row="0"
            android:layout_column="3"
            android:text="+"
            android:textSize="20dip" />

        <Button
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:text="-"
            android:textSize="20dip" />

        <Button
            android:id="@+id/times"
            android:layout_row="2"
            android:layout_column="3"
            android:text="x"
            android:textSize="20dip" />

        <Button
            android:id="@+id/divide"
            android:layout_row="3"
            android:layout_column="3"
            android:text="/"
            android:textSize="20dip" />

        <!--        <Button-->
        <!--            android:id="@+id/advanced"-->
        <!--            android:layout_row="4"-->
        <!--            android:layout_column="2"-->
        <!--            android:text="Adv"-->
        <!--            android:textSize="20dip" />-->

        <Button
            android:id="@+id/c"
            android:layout_row="4"
            android:layout_column="2"
            android:text="c"
            android:textSize="20dip" />

        <Button
            android:id="@+id/negate"
            android:layout_height="match_parent"
            android:layout_row="3"
            android:layout_column="2"
            android:text="N"
            android:textSize="20dip" />


    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
